<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rosa.fundo"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/neutro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planta de solo neutro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.689" />

    <Button
        android:id="@+id/seco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planta de solo Seco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/neutro" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10px"
        android:layout_marginEnd="10pt"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:text="QUE TIPO DE PLANTA QUER MONITORIZAR: "
        android:textAlignment="center"
        android:textColor="#0A5845"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="87dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/humido"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:srcCompat="@drawable/plantaHumida"
        android:scaleType="fitCenter"
        android:background="@color/rosa.fundo"/>

</androidx.constraintlayout.widget.ConstraintLayout>