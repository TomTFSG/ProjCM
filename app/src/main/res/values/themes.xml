<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Projeto" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>





    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorControlNormal">@color/transparent</item>


        <item name="android:textSize">42sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:textColorPrimary">@color/verdeclaronaotaoclaro</item>
    </style>





    <style name="TituloTheme">
        <item name="android:textColor">@color/verdemeio</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_bold</item>
    </style>




    <style name="HistoryColumnDateTheme">
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/verdemeio</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="HistoryColumnDateItemTheme">
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/verdemeio</item>
    </style>

    <style name="HistoryColumnValuesTheme">
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/verdeclaronaotaoclaro</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="HistoryColumnValuesItemTheme">
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/verdeclaronaotaoclaro</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="Theme.Projeto" parent="Base.Theme.Projeto" />
</resources>